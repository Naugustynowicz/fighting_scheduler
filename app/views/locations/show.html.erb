<h1><%= @location.name %></h1>

<p><%= @location.street %></p>
<p><%= @location.city %></p>
<p><%= @location.postal_code + ', ' + @location.country %></p>

<p><%= @location.other %></p>

<ul>
  <li><%= link_to "Edit", edit_location_path(@location) %></li>
  <li><%= link_to "Destroy", location_path(@location), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %></li>
</ul>
