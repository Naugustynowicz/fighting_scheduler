<%= form_with model: sport do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% sport.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% sport.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, Visible::VALID_STATUSES, selected: sport.status || 'public' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
